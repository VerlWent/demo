<Window x:Class="demo2024.Windows.Authorizaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo2024.Windows"
        mc:Ignorable="d"
        Title="Authorizaction" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50">
            <StackPanel Width="100">
                
                <TextBlock Text="Логин" HorizontalAlignment="Center"></TextBlock>
                <TextBox Width="100" Background="GhostWhite" Name="LoginInput"></TextBox>

                <TextBlock Text="Пароль" HorizontalAlignment="Center"></TextBlock>
                <TextBox Width="100" Background="GhostWhite" Name="PasswordInput"></TextBox>

                <Button Content="Войти" Name="BtnJoin" Click="BtnJoin_Click" Margin="0,10,0,0"></Button>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
